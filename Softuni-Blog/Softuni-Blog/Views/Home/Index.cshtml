@{
    ViewBag.Title = "Home Page";
}
@model List<Softuni_Blog.Models.Post>

@foreach (var post in Model)
{
    <div class="row">
        <div class="post col-md-6">
            <h2>@post.Title</h2>
            <div>
                Posted on <i>@post.Date</i>
                @if (post.Author != null)
                {
                    @:by <i>@post.Author.FullName)</i>
                }
            </div>
            <p>@post.Body</p>
        </div>
    </div>
}